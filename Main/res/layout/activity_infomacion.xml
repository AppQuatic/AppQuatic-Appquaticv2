<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.Informacion">

    <ImageView
        android:id="@+id/informacion_imageView_logo_app"
        android:layout_width="145dp"
        android:layout_height="157dp"
        android:layout_gravity="center"
        android:padding="3sp"
        android:paddingLeft="3sp"
        android:paddingTop="3sp"
        android:paddingRight="3sp"
        android:paddingBottom="3sp"

        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/informacion_textView_nombre_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/informacion_textView_yo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Antonio Tokumbo Azeez Peñas"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TFG UNIR 2021" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/informacion_button_datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Datos " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/informacion_textView_datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/informacion_button_deportes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Deportes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/informacion_imageView_cuadrado_verde"
            android:layout_width="34dp"
            android:layout_height="22dp"
            tools:src="@mipmap/ic_cuadrado_sin_nada" />

        <TextView
            android:id="@+id/informacion_textView_info_verde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deporte con condiciones óptimas" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/informacion_imageView_cuadrado_amarillo"
            android:layout_width="34dp"
            android:layout_height="22dp"
            tools:src="@mipmap/ic_cuadrado_sin_nada" />

        <TextView
            android:id="@+id/informacion_textView_info_amarillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deporte practicable por expertos" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/informacion_imageView_cuadrado_rojo"
            android:layout_width="34dp"
            android:layout_height="22dp"
            tools:src="@mipmap/ic_cuadrado_sin_nada" />

        <TextView
            android:id="@+id/informacion_textView_info_rojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deporte no practicable" />

    </LinearLayout>

</LinearLayout>